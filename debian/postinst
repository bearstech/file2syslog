#!/bin/sh
# postinst script for file2syslog
#
# see: dh_installdeb(1)

set -e

case "$1" in
  configure|reconfigure)

    # Create saned user/group if they do not exist
    if ! id file2syslog >/dev/null 2>/dev/null; then
      echo "Adding file2syslog user ..."
      adduser --home /var/spool/file2syslog --quiet --system --ingroup adm file2syslog
    fi
  ;;

  abort-upgrade|abort-remove|abort-deconfigure)
  ;;

  *)
    echo "postinst called with unknown argument \`$1'" >&2
    exit 1
  ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
